switch(ch)
    {

     case 1:
     {
         printf("enter two number:");
         scanf("%d %d",&x,&y);
         z=x+y;
         printf("adition is %d",z);
break;
     }
     case 2:

     {
         printf("enter two number:");
         scanf("%d %d",&x,&y);
         z=x-y;
         printf("substrction is %d",z);
         break;
            }
     case 3:
     {
         printf("enter two number:");
