#include<stdio.h>
#include<string.h>
 void main()
{
    //commonly used string functions in c

    //strcat():appends copy of the source string to the end of the desination string
    char desination[50]="hello  ";
    char source[50]="world";
    strcat(desination, source);
    printf("struct:%s\n",desination);

    //strcmp():compare two strings lexicographically.
    char str1[15]="hello"; //values are same then return 0.
    char str2[15]="hello"; //values are unequal then return ineger value
    int result=strcmp(str1,str2);
    printf("strcmp: result :%d\n",result);
    if(result==0)
    {
        printf("strings are equal");

    }
else
    printf("strings are not equal\n");

    //strcpy: use replace the value
    char ptr1[50]="old value";
    char ptr2[50]="new value";
     strcpy(ptr1,ptr2);
     printf("\nstrcpy:%s\n",ptr1);

     //strlen:give string length
     char  name[]="jai shree ram";
     int length =strlen(name);
     printf(" length is  %d\n",length);

    }
